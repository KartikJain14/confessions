<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confessions</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Confessions</h1>
        <div class="sorting-div">
            <span>Sort by:</span>
            <a href="/confessions?sort=vote">Votes</a>
            <span>OR</span>
            <a href="/confessions?sort=time">Time</a>
        </div>
        <div class="confessions-list">
            <% if (confessions.length === 0) { %>
                <p>No confessions yet. Be the first to share!</p>
            <% } else { %>
                <% confessions.forEach(confession => { %>
                    <div class="confession-block" id="confession-<%= confession.id %>">
                        <p class="confession-text"><%= confession.text %></p>
                        <p class="confession-time"><%= new Date(confession.createdAt).toLocaleString() %></p>
                        <div class="voting-info">
                            <p class="confession-score">Votes: <span id="score-<%= confession.id %>"><%= confession.score || 0 %></span></p>
                            <a href="/confession/<%= confession.id %>" class="go-back">View</a>
                            <div class="voting-buttons">
                                <button type="button" class="vote-button" data-id="<%= confession.id %>" data-value="1">&#x25B2;</button>
                                <button type="button" class="vote-button" data-id="<%= confession.id %>" data-value="-1">&#x25BC;</button>
                            </div>
                        </div>
                    </div>                                       
                <% }) %>
            <% } %>
        </div>
        <a class="go-back" href="/">Go Back</a>
    </div>
    <script src="/index.js"></script>
</body>
</html>
